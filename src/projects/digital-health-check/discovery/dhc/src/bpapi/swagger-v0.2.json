{
  "openapi": "3.0.1",
  "info": {
    "title": "Blood Pressure API",
    "version": "0.2"
  },
  "paths": {
    "/v0.2/BloodPressure/{systolic}/{diastolic}": {
      "get": {
        "tags": [
          "BloodPressure"
        ],
        "summary": "Retrieves a Blood Pressure result.",
        "description": "Awesomeness v0.2!",
        "operationId": "GetBloodPressure",
        "parameters": [
          {
            "name": "systolic",
            "in": "path",
            "description": "The systolic (top)",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            },
            "example": 100
          },
          {
            "name": "diastolic",
            "in": "path",
            "description": "The diastolic (bottom)",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            },
            "example": 75
          }
        ],
        "responses": {
          "200": {
            "description": "BP result retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BloodPressureResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BloodPressureResult": {
        "type": "object",
        "properties": {
          "bloodPressure": {
            "type": "string",
            "description": "The result of the blood pressure.",
            "nullable": true,
            "example": "Normal"
          }
        },
        "additionalProperties": false,
        "description": "A Blood Pressure result"
      }
    }
  }
}